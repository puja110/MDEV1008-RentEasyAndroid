<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_8"
        android:paddingBottom="@dimen/spacing_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_near_public_facilities"
            android:layout_width="@dimen/spacing_24"
            android:layout_height="@dimen/spacing_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_near_public_facilities"
            app:tint="@color/grey_808080"
            tools:srcCompat="@drawable/ic_mini_market" />

        <TextView
            android:id="@+id/tv_near_public_facilities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_8"
            android:fontFamily="@font/sansf_bold"
            android:gravity="center_vertical"
            android:text="Mini Market"
            android:textColor="@color/black_444444"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/iv_near_public_facilities"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_near_public_facilities"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sansf_regular"
            android:gravity="center_vertical"
            android:text="200m"
            android:textColor="@color/grey_808080"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_near_public_facilities"
            app:layout_constraintStart_toStartOf="@+id/tv_near_public_facilities"
            app:layout_constraintTop_toBottomOf="@+id/tv_near_public_facilities" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>